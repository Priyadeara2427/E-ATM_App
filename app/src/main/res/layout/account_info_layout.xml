<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    android:backgroundTint="#00000000">

    <ImageView
        android:id="@+id/account_info_page_image"
        android:layout_width="192dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:background="?attr/colorOnBackground"
        android:backgroundTint="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_info_page_image" />

    <TextView
        android:id="@+id/security_show_info_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Security PIN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_info_page_image" />

    <EditText
        android:id="@+id/enter_security_show_info_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/security_show_info_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/show_info_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Show Information"
        android:textColor="#0F0E0E"
        android:backgroundTint="#858181"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security_show_info_page" />

    <TextView
        android:id="@+id/full_name_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Full Name: "
        android:textSize="18sp"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_info_page_image" />

    <TextView
        android:id="@+id/full_name_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/full_name_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/email_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Email: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name_show_page" />

    <TextView
        android:id="@+id/email_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/email_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/phone_number_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Phone Number: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_show_page" />

    <TextView
        android:id="@+id/phone_number_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/phone_number_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/account_number_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F2EBEB"
        android:text="Account Number: "
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_show_page" />

    <TextView
        android:id="@+id/account_number_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/account_number_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/adhaar_number_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Adhaar Number: "
        android:textSize="18sp"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_number_show_page" />

    <TextView
        android:id="@+id/adhaar_number_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/adhaar_number_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/PAN_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="PAN Number: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adhaar_number_show_page" />

    <TextView
        android:id="@+id/PAN_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/PAN_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ATM_Number_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="ATM Number: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PAN_show_page" />

    <TextView
        android:id="@+id/ATM_Number_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/ATM_Number_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/account_status_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Account Status: "
        android:textSize="18sp"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ATM_Number_show_page" />

    <TextView
        android:id="@+id/account_status_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/account_status_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/balance_show_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Balance: "
        android:textSize="18sp"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_status_show_page" />

    <TextView
        android:id="@+id/balance_result_show_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/balance_show_page"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/return_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/back_to_home"
        android:textColor="#0F0E0E"
        android:backgroundTint="#858181"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/show_info_response"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_info_page_button" />
</androidx.constraintlayout.widget.ConstraintLayout>